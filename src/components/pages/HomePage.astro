---
import Banner from "@components/banners/Banner.astro";
import HabilityCard from "@components/cards/HabilityCard.astro";
import ExperiencesCard from "@components/cards/ExperiencesCard.astro";
import {
  ComputerDesktopIcon,
  ServerIcon,
  SwatchIcon,
} from "@heroicons/react/24/outline";

import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

import FrontendDeveloperIcon from "@assets/logos/IconTEC.svg";
import YGULogo from "@assets/logos/yguLogo.svg";
---

<Banner />

<section
  class="container py-16 sm:py-20 lg:py-24 px-4
    grid grid-cols-1 lg:grid-cols-3 gap-10 md:gap-12"
>
  <h2
    class="text-center font-title font-semibold text-3xl lg:text-4xl lg:text-[40px]
    lg:col-span-3"
  >
    {t("home.hability.title")}
  </h2>

  <HabilityCard
    title={t("home.hability.card1.title")}
    icon={ComputerDesktopIcon}
    description={t("home.hability.card1.description")}
  />

  <HabilityCard
    title={t("home.hability.card2.title")}
    icon={ServerIcon}
    description={t("home.hability.card2.description")}
  />

  <HabilityCard
    title={t("home.hability.card3.title")}
    icon={SwatchIcon}
    description={t("home.hability.card3.description")}
  />
</section>

<section class="container px-4 py-16 sm:py-20 lg:py-24">
  <h2
    class="text-center font-title font-semibold text-3xl lg:text-4xl lg:text-[40px] mb-6 lg:mb-10"
  >
    {t("home.experience.title")}
  </h2>

  <div
    class="flex flex-col lg:flex-row items-center justify-center flex-wrap
    gap-8 sm:gap-8 md:gap-12"
  >
    <ExperiencesCard
      titulo={t("home.experience.card1.title")}
      fechaDeTrabajo={t("home.experience.card1.duration")}
      rol={t("home.experience.card1.role")}
      iconoEmpresa={YGULogo}
      funciones={t("home.experience.card1.funciones")}
    />
    <ExperiencesCard
      titulo={t("home.experience.card2.title")}
      fechaDeTrabajo={t("home.experience.card2.duration")}
      rol={t("home.experience.card2.role")}
      iconoEmpresa={FrontendDeveloperIcon}
      funciones={t("home.experience.card2.funciones")}
    />
    <ExperiencesCard
      titulo={t("home.experience.card2.title")}
      fechaDeTrabajo={t("home.experience.card2.duration")}
      rol={t("home.experience.card2.role")}
      iconoEmpresa={FrontendDeveloperIcon}
      funciones={t("home.experience.card2.funciones")}
    />
  </div>
</section>
